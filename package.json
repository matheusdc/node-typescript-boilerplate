{
  "name": "typescript-test",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --no-cache",
    "tsc": "tsc",
    "dev": "nodemon --watch src/ --exec \"ts-node src/index.ts\" -e ts",
    "fast-dev": "ts-node-dev --respawn --transpileOnly src/index.ts",
    "prod": "tsc && node ./build/app.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.16.1",
    "express": "^4.16.4",
    "typescript": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.5",
    "@types/supertest": "^2.0.7",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-node-dev": "^1.0.0-pre.32"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
